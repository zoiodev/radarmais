        <script>
            $(document).foundation();

            function footer() {
                var footer = $(".rodape");
                var pos = footer.position();
                var height = $(window).height();
                height = height - pos.top;
                height = height - (footer.height()*2);
                if (height > 0) {
                    footer.css({
                        'margin-top': (height) + 'px'
                    });
                }
            }

            $(document).ready(function(){
                footer();
            });
            $(window).resize(function(){
                footer();
            });
        </script>

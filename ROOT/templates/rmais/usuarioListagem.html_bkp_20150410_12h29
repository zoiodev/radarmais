									{{header.text}} 
								{% if header.sortable %}</a>{% endif %}
							</th>
						{% endfor %}
						<th>Ação</th>
					</tr>
				</thead>
				<tbody ng-hide="completing">
					{% for usuario in usuarios %}
						<tr id="usuario_{{usuario.id}}">
							<td class="text-center bold">{{usuario.id}}</td>
							<td>{{usuario.nome_do_usuario}}</td>
